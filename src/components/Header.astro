---
const navItems = [
  { label: "Inicio", href: "/" },
  { label: "Plan de retiro (IUL)", href: "/#planes" },
  { label: "Plan Funerario", href: "/#planes" },
  { label: "Clientes", href: "/#testimonios" },
  { label: "Contáctanos", href: "/#contacto" },
];
---

<header
  class="bg-white/90 backdrop-blur supports-[backdrop-filter]:bg-white/70 sticky top-0 z-50 border-b border-slate-200"
>
  <div class="container-responsive flex items-center justify-between h-16">
    <a href="/" class="flex items-center gap-3">
      <img
        src="/logo-adris.png"
        alt="Adri´s Benefit Solutions"
        class="h-12 w-auto object-contain"
      />
    </a>

    <nav class="hidden md:flex items-center gap-6">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-slate-700 font-medium transition-colors duration-200 hover:text-[#C6A350]"
          >
            {item.label}
          </a>
        ))
      }
    </nav>

    <button
      class="md:hidden inline-flex items-center justify-center rounded-md p-2 text-slate-700 hover:bg-slate-100"
      aria-label="Abrir menú"
      id="menu-btn"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </div>

  <div id="mobile-nav" class="md:hidden border-t border-slate-200 hidden">
    <div class="container-responsive py-2 grid gap-2">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="block px-4 py-3 rounded-lg text-slate-700 font-medium 
         transition-all duration-200 hover:bg-slate-100 hover:text-[#C6A350]"
          >
            {item.label}
          </a>
        ))
      }
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById("menu-btn");
  const mobile = document.getElementById("mobile-nav");
  btn?.addEventListener("click", () => {
    mobile?.classList.toggle("hidden");
  });
</script>

<section id="contacto" class="section bg-secondary-1">
  <div class="container-responsive grid gap-8 lg:grid-cols-2">
    <div>
      <h2 class="text-2xl sm:text-3xl font-display font-bold mb-4">Ubicación y contacto</h2>
      <p class="text-slate-600 mb-4">Houston, Texas · Atención en español</p>
      <img src="https://placehold.co/800x400/EEE/AAA?text=Mapa" alt="Mapa" class="rounded-lg border border-slate-200" />
    </div>
    <form class="bg-white rounded-xl shadow-sm p-6 grid gap-4">
      <div>
        <label class="block text-sm font-medium text-slate-700">Nombre</label>
        <input type="text" class="mt-1 w-full rounded-md border border-slate-300 px-3 py-2" placeholder="Tu nombre" />
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700">Teléfono</label>
        <input type="tel" class="mt-1 w-full rounded-md border border-slate-300 px-3 py-2" placeholder="(XXX) XXX-XXXX" />
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700">Mensaje</label>
        <textarea class="mt-1 w-full rounded-md border border-slate-300 px-3 py-2" rows="4" placeholder="Cuéntanos qué necesitas"></textarea>
      </div>
      <button type="submit" class="btn-primary">Solicitar información</button>
    </form>
  </div>
</section>
